<Window x:Class="eredmenyek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eredmenyek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <ListBox Margin="10" Width="350" Height="400" x:Name="lbxVersenyzok" SelectionChanged="lbxVersenyzok_SelectionChanged" >
                <ListBoxItem Content="Ide kerülnek a nevek" />  
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Label Content="Sorszám" />
            <TextBox x:Name="tbxSorszam" Margin="10" IsReadOnly="True"/>

            <Label Content="Név" />
            <TextBox x:Name="tbxNev" Margin="10" IsReadOnly="True"/>

            <Label Content="1. feladat" />
            <TextBox x:Name="tbx1feladat" Margin="10" IsReadOnly="True"/>

            <Label Content="2. feladat" />
            <TextBox x:Name="tbx2feladat" Margin="10" IsReadOnly="True"/>

            <Label Content="3. feladat" />
            <TextBox x:Name="tbx3feladat" Margin="10" IsReadOnly="True"/>


        </StackPanel>
        
    </Grid>
</Window>
